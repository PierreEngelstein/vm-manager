@inherits BaseVirtualMachinesPanel

<div class="fullheight container-fluid main_container d-flex">
        <div name="GridContainer" class="row flex-fill"></div>
        <div class="border-right" style="width: @sidePanelStr; padding-top: 10px;">
                <div class="fullheight">
                        <div style="padding-bottom: 10px;">
                                <input type="text" name="" id="" placeholder="search" class="filterInput" style="margin-left: @sidePanelMarginStr; width: calc(100% - @sidePanelMarginStr - @sidePanelMarginStr);">
                        </div>

                        @for(int i = 0; i < Menus.Count; i++)
                        {
                                int index = i;
                                <div class="menulist_item" style="display: flex;">
                                        <button style="font-size: 13px;" type="button" class="btn btn-link" @onclick="() => Select(index)">
                                                <i class="material-icons mr-1" style="font-size: 13px;">add</i>
                                                <span>@Menus[index].Name</span>
                                        </button>                                                                        
                                </div>
                        }
                </div>
        </div>

        <div class="" style="width: calc(100% - @sidePanelStr);">
                @if(SelectedMenu != null){
                        RenderFragment renderFragment = (builder) => { builder.OpenComponent(0, SelectedMenu.GetType()); builder.CloseComponent(); };
                        <div>
                                @renderFragment
                        </div>
                }
        </div>
</div>